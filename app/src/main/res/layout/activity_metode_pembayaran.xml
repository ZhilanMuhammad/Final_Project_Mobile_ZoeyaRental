<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetodePembayaranActivity">

    <RelativeLayout
        android:id="@+id/footerhitam"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/metode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/footerhitam"
        android:text="Metode Pembayaran"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="20dp"/>

    <GridLayout
        android:id="@+id/rv_menu"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/metode"
        android:layout_marginTop="31dp">


        <androidx.cardview.widget.CardView
            android:layout_width="95dp"
            android:layout_height="51dp"
            android:layout_margin="16dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/logoatm"
                android:layout_width="95dp"
                android:layout_height="51dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="27dp"
                    android:src="@drawable/mandiri" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="95dp"
            android:layout_height="51dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="51dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="39dp"
                    android:src="@drawable/atmbersama" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="95dp"
            android:layout_height="51dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp">

            <LinearLayout

                android:layout_width="95dp"
                android:layout_height="51dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="27dp"
                    android:src="@drawable/atmbri" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_menu"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/fontregular"
            android:text="Nama SIM"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/bntinput"
            android:hint=" Masukkan Nama Sim" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/fontregular"
            android:text="No HP"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/btninput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/bntinput"
            android:hint=" Masukkan No HP" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="Simpan Info"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>

        <Button
            android:id="@+id/btninfo"
            android:onClick="tekanselesai"
            android:layout_width="335dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="90dp"
            android:text="selesai"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/shape_rectangle_blue"/>



    </LinearLayout>

</RelativeLayout>




